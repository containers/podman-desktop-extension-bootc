{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "resolveJsonModule": true,
    "preserveValueImports": false,
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "types/*.d.ts",
    "../../types/**/*.d.ts",
  ]
}
